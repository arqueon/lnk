{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "top",
    "notification-window-preferred-output": "HDMI-A-1",
    "layer-shell": true,
    "cssPriority": "user",
    "control-center-margin-top": 13,
    "control-center-margin-bottom": 0,
    "control-center-margin-right": 14,
    "control-center-margin-left": 0,
    "notification-2fa-action": true,
    "notification-inline-replies": false,
    "notification-icon-size": 100,
    "notification-body-image-height": 170,
    "notification-body-image-width": 200,
    "notification-window-width": 420,
    "timeout": 12,
    "timeout-low": 8,
    "timeout-critical": 0,
    "fit-to-screen": false,
    "control-center-width": 450,
    "control-center-height": 920,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "dnd",
        "buttons-grid",
        "mpris",
        "volume",
        "backlight",
        "title",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear"
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "label": {
            "max-lines": 1,
            "text": "Notification"
        },
        "mpris": {
            "image-size": 100,
            "image-radius": 0
        },
        "volume": {
            "label": "󰕾"
        },
        "backlight": {
            "label": "󰃟"
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "swaylock"
                },
                {
                    "label": "󰝟",
                    "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
                },
                {
                    "label": "󰂯",
                    "command": "blueman-manager"
                },
                {
                    "label": "",
                    "command": "nwg-bar"
                }
            ]
        }
    }
}
